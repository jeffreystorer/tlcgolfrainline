import { useState, useEffect } from 'react';

const useFetchRainLine = (ref) => {
  const [data, setData] = useState(null);
  const [info, setInfo] = useState(null);
  const [error, setError] = useState(null);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    if (ref.current) {
      (async () => {
        try {
          const response = await fetch(
            `https://sheets.googleapis.com/v4/spreadsheets/1wzUR6VBTeQjWgeG4xJqzJMl6p9mM_g3f-SujkeRZRgs/values/Superintendents'_Submissions?key=AIzaSyDvDUbFJUlEdDIm-zuE_r5-Mg8w7UiPoI0`
          );
          const result = await response.json();
          console.log('ðŸ˜ŠðŸ˜Š result', result);
          setData(result.values);
          const infoResponse = await fetch(
            `https://sheets.googleapis.com/v4/spreadsheets/1wzUR6VBTeQjWgeG4xJqzJMl6p9mM_g3f-SujkeRZRgs/values/Additional_Information?key=AIzaSyDvDUbFJUlEdDIm-zuE_r5-Mg8w7UiPoI0`
          );
          const infoResult = await infoResponse.json();
          setInfo(infoResult.values);
        } catch (err) {
          setError(err);
        } finally {
          setLoading(false);
        }
      })();
    }
    return () => {
      ref.current = false;
    };
  }, [ref]);
  return { loading, data, info, error };
};

export default useFetchRainLine;
